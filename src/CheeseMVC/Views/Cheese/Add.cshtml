@model CheeseMVC.ViewModels.AddCheeseViewModel

<h1>Add Cheese</h1>

<form asp-controller="Cheese" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryID"></label>
        <select asp-for="CategoryID" asp-items="Model.Categories">Category</select>
        
    </div>

    <input type="submit" value="Add Cheese" />

    <br/>
    <br/>

  @* <p><a asp-controller="Cheese" asp-action="Add">Reset Form</a></p>*@

</form>
